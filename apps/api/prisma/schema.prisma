generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model LifeProject {
  id          String   @id @default(cuid())
  title       String
  createdBy   String
  year        String
  categories  String[] // Multiple categories (array)
  description String   @db.Text
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("life_projects")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model MutualistPortfolio {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  industry     String
  year         String
  serviceIcons String[]
  serviceNames String
  isFeatured   Boolean  @default(false)
  teams        Json // Array of { role: string, names: string[] }
  content      Json // Array of { type: string, images: string[] }
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("mutualist_portfolios")
}

model MutualistBlog {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  category  String
  date      String // Using string as per client data example "August 4, 2025"
  image     String? // Optional
  rotation  Float    @default(0)
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mutualist_blogs")
}
